@model energy_bill.Models.BillEnergy

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Data Leitura</label>
            <input  class="form-control"
                    type="text" name="dateRead"/>
        </div>

        <div class="form-group">
            <label>Número Leitura</label>
            <input  class="form-control"
                    type="text" name="numberRead"/>
        </div>

        <div class="form-group">
            <label>KW gasto</label>
            <input  class="form-control"
                    type="text" name="kwSpent"/>
        </div>

        <div class="form-group">
            <label>Valor</label>
            <input  class="form-control"
                    type="text" name="price"/>
        </div>

        <div class="form-group">
            <label>Data pagamento</label>
            <input  class="form-control"
                    type="text" name="datePayment"/>
        </div>

        <div class="form-group">
            <label>Média consumo</label>
            <input  class="form-control"
                    type="text" name="avgComsumption"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>